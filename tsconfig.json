{
	"compilerOptions": {
		"baseUrl": ".",
		"experimentalDecorators": true,
		"module": "commonjs",
		"noImplicitAny": false,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"paths": {
			"*": [
				"*"
			],
			".../*": [
				"./*"
			]
		},
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		]
	},
	"exclude": [
		"build",
		"lib",
		"node_modules"
	]
}
