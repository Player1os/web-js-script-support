{
  "name": "@player1os/webpack-config",
  "version": "1.0.0",
  "description": "A set of common configurations the webpack bundler",
  "private": false,
  "main": "index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "~8.7.0",
    "npm": "~5.5.1"
  },
  "scripts": {
    "preversion": "npm run validate && git checkout . && git checkout master && git pull",
    "postversion": "git push && git push --tags && npm publish",
    "build": "webpack",
    "build:watch": "npm run build -- --watch",
    "clean": "rm -rf index.js* && rm -rf types",
    "execute": "ts-node -r @player1os/bluebird-global -r module-alias/register",
    "lint": "tslint {./,src/**/,test/**/}*.ts --project ./tsconfig.json",
    "lint:watch": "chokidar ./*.ts src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "test": "npm run execute -- test/index.ts",
    "test:coverage": "nyc npm test",
    "test:watch": "chokidar src/**/*.ts test/**/*.ts -c \"npm test\" --initial --silent",
    "validate": "npm run clean && npm run lint && npm run build && npm run build && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "config"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/webpack-config/issues"
  },
  "homepage": "https://github.com/Player1os/webpack-config#readme",
  "dependencies": {
    "cpr": "^2.2.0",
    "fs-extra": "^4.0.2",
    "lodash": "^4.17.4",
    "recursive-readdir-sync": "^1.0.6",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "@player1os/bluebird-global": "^1.0.0",
    "@player1os/tsconfig": "^1.0.0",
    "@player1os/tslint-config": "^1.3.1",
    "@types/bluebird-global": "^3.5.2",
    "@types/chai": "^4.0.0",
    "@types/fs-extra": "^4.0.3",
    "@types/mocha": "^2.2.44",
    "@types/node": "^8.0.46",
    "@types/rimraf": "0.0.28",
    "@types/webpack": "^3.0.13",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.1.3",
    "babel-core": "^6.24.1",
    "babel-preset-env": "^1.5.1",
    "bluebird": "^3.5.0",
    "chai": "^4.0.0",
    "chokidar": "^1.7.0",
    "mocha": "^4.0.1",
    "module-alias": "^2.0.0",
    "nyc": "^11.0.1",
    "ts-node": "^3.0.4",
    "tslint": "^5.2.0",
    "tsutils": "1.6.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1"
  },
  "_moduleAliases": {
    "...": "."
  }
}
