{
  "name": "@player1os/webpack-config",
  "version": "1.0.1",
  "description": "A set of common configurations the webpack bundler",
  "private": false,
  "main": "index.js",
  "types": "types/index.d.ts",
  "engines": {
    "node": "~8.7.0",
    "npm": "~5.5.1"
  },
  "scripts": {
    "preversion": "git checkout . && git checkout master && git pull && npm run validate",
    "postversion": "git push && git push --tags && npm publish",
    "start": "ts-node-extra-execute",
    "build": "webpack",
    "build:watch": "chockidar webpack.config.ts -c \"npm run build -- --watch\" --initial --silent",
    "clean": "rm -rf index.js* && rm -rf types",
    "lint": "tslint {./,src/**/,test/**/}*.ts --project ./tsconfig.json",
    "lint:watch": "chokidar ./*.ts src/**/*.ts test/**/*.ts -c \"npm run lint\" --initial --silent",
    "validate": "npm run clean && npm run lint && npm run build && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Player1os/webpack-config.git"
  },
  "keywords": [
    "webpack",
    "config"
  ],
  "author": "Osama Hassanein <player1os@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Player1os/webpack-config/issues"
  },
  "homepage": "https://github.com/Player1os/webpack-config#readme",
  "dependencies": {
    "cpr": "^3.0.1",
    "fs-extra": "^4.0.2",
    "recursive-readdir-sync": "^1.0.6",
    "rimraf": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.0.1",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "@player1os/ts-node-extra": "^1.0.1",
    "@player1os/tsconfig": "^1.0.2",
    "@player1os/tslint-config": "^1.3.5",
    "@types/fs-extra": "^4.0.3",
    "@types/node": "^8.0.46",
    "@types/rimraf": "^2.0.2",
    "@types/webpack": "^3.0.14",
    "awesome-typescript-loader": "^3.1.3",
    "chokidar": "^1.7.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.8.0",
    "tsutils": "^2.12.1",
    "typescript": "^2.5.3"
  }
}
